      <% @warehouses.each do |warehouse| %>
      <div class="col-sm-12 col-md-6">
        <div class="catalog-card">
          <div class="photo-box">
            <img class="company-logo" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
            <div class="price-box">
            <%= warehouse.public_price %> â‚¬ / month
          </div>
          </div>
          <div class="text-box">
            <%= warehouse.address %>
