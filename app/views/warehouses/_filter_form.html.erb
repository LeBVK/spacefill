

<form action="/warehouses", method= "post", data-remote="true" id="filters">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <div class="input-content">
      <div class="address-input">
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" name="query_localisation" class="form-control event-input" id="warehouse_address" value="<%= params[:query_localisation] %>">
        </div>
      </div>
      <div class="number-input">
        <div class="form-group">
          <label for="pallet">Min Pallets</label>
          <input type="number" class="form-control event-input" name="pallets" value = <%= params[:pallets] %>>
        </div>
      </div>
      <div class="number-input">
        <div class="form-group">
          <label for="surface">Min Surface</label>
          <input type="number" class="form-control event-input" name="surface" value = <%= params[:surface] %>>
        </div>
      </div>
      <div class="number-input">
        <div class="form-group">
          <label for="public_price">Max Price</label>
          <input type="number" class="form-control event-input" name="public_price" value = <%= params[:public_price] %>>
        </div>
      </div>

      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="food_grade_certified" <% if params[:food_grade_certified] == 'on'  %> checked <% end %> > Food Certified</label>
        </div>
      </div>
      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="alcohol_certified" <% if params[:alcohol_certified] == 'on'  %> checked <% end %>  > Alcohol Certified</label>
        </div>
      </div>
      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="frozen_certified" <% if params[:frozen_certified] == 'on'  %> checked <% end %> > Frozen Certified</label>
        </div>
      </div>
      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="fulfillment_services" <% if params[:fulfillment_services] == 'on'  %> checked <% end %> > Fulfillement</label>
        </div>
      </div>
      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="transportation_services" <% if params[:transportation_services] == 'on'  %> checked <% end %>> Transportation</label>
        </div>
      </div>
      <div class="checkbox-input">
        <div class="checkbox">
          <label><input type="checkbox" name="devanning_services" <% if params[:devanning_services] == 'on'  %> checked <% end %> > Devanning</label>
        </div>
      </div>
      <div class="button-input">
        <button type="submit" class="btn btn-default filter-btn" id="submit-btn">Apply Filters</button>
      </div>
    </div>
</form>
