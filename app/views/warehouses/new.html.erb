<div class="banner" id="banner-form" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(https://securecdn.pymnts.com/wp-content/uploads/2016/09/Warehouse-Space-Shortage.jpg);">
  <div class="banner-content">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <%= simple_form_for(@warehouse) do |f| %>
            <%= f.input :address %>
            <%= f.input :surface, placeholder: "in sq meters" %>
            <%= f.input :pallets %>
            <%= f.input :description %>
            <%= f.input :public_price, label: "Price"%>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.input :food_grade_certified %>
            <%= f.input :frozen_certified %>
            <%= f.input :alcohol_certified %>
            <%= f.input :fulfillment_services %>
            <%= f.input :transportation_services %>
            <%= f.input :devanning_services %>
            <%= f.submit "add your warehouse", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
